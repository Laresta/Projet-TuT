<Window x:Class="ProjetTuT.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetTuT"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="bg_fenetre.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Back" Margin="25,25,75,20" Background="Aquamarine"></Button>
        <ComboBox  Grid.Column="1" Margin="25,25,25,20">
            <ComboBoxItem Content="Option 1"/>
            <ComboBoxItem Content="Option 2"/>
        </ComboBox>
        <Image Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0.4,-0.4,0" Source="model\assets\images\output\image1.jpg" Width="350" Height="250">
           
        </Image>
    </Grid>
</Window>
